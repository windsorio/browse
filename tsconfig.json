{
  "include": ["./packages/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true
  },
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/parser"
    }
  ]
}
