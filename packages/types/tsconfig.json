{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "target": "es5",
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./out",
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
